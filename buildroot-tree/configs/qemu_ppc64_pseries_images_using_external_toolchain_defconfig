# Architecture
BR2_powerpc64=y
BR2_powerpc_power7=y

# Root FS customizations
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_egraff_xplat_ci_images_buildroot_PATH)/board/powerpc64_pseries/rootfs_overlay"
BR2_ROOTFS_USERS_TABLES="$(BR2_EXTERNAL_egraff_xplat_ci_images_buildroot_PATH)/board/powerpc64_pseries/users_table.txt"
BR2_ROOTFS_POST_BUILD_SCRIPT="$(BR2_EXTERNAL_egraff_xplat_ci_images_buildroot_PATH)/board/powerpc64_pseries/post-build.sh"
BR2_ROOTFS_POST_IMAGE_SCRIPT="$(BR2_EXTERNAL_egraff_xplat_ci_images_buildroot_PATH)/board/powerpc64_pseries/post-image.sh"

# Target filesystem images
BR2_TARGET_ROOTFS_CPIO=y
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_SIZE="120M"

# Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_DEFCONFIG="pseries"
BR2_LINUX_KERNEL_VMLINUX=y

# Newer 4.19 kernel with fix for CRNG bug
# See https://unix.stackexchange.com/questions/442698/when-i-log-in-it-hangs-until-crng-init-done
# and https://bugs.debian.org/cgi-bin/bugreport.cgi?bug=897572
# and https://security-tracker.debian.org/tracker/CVE-2018-1108
BR2_LINUX_KERNEL_CUSTOM_VERSION=y
BR2_LINUX_KERNEL_CUSTOM_VERSION_VALUE="4.19.152"

# Linux headers same as kernel, a 4.19 series
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_4_19=y

# External toolchain
BR2_TOOLCHAIN_EXTERNAL=y
BR2_TOOLCHAIN_EXTERNAL_PATH="/root/toolchain/ppc64_pseries"
BR2_TOOLCHAIN_EXTERNAL_HEADERS_4_19=y
BR2_TOOLCHAIN_EXTERNAL_CUSTOM_GLIBC=y
BR2_TOOLCHAIN_EXTERNAL_CXX=y

# System
BR2_SYSTEM_DHCP="eth0"
BR2_TARGET_GENERIC_GETTY_PORT="hvc0"

# Packages
BR2_PACKAGE_STRACE=y
BR2_PACKAGE_VALGRIND=y
BR2_PACKAGE_BINUTILS=y
BR2_PACKAGE_OPENSSH=y

# Added to speed up CRNG initializing
# See https://unix.stackexchange.com/questions/442698/when-i-log-in-it-hangs-until-crng-init-done
BR2_PACKAGE_RNG_TOOLS=y
BR2_PACKAGE_HAVEGED=y

BR2_PACKAGE_HOST_QEMU=y
BR2_PACKAGE_HOST_QEMU_SYSTEM_MODE=y
BR2_PACKAGE_HOST_QEMU_VIRTFS=y
